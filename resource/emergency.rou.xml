<?xml version="1.0" encoding="UTF-8"?>
<!-- Emergency vehicle routes for traffic simulation -->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Vehicle Type Definition for Emergency Vehicles -->
    <vType id="emergency" accel="3.5" decel="5.5" sigma="0.3" length="6.5" minGap="2.0" maxSpeed="70.0" color="1,0,1"/>
    
    <!-- Routes -->
    <route id="route_emergency_1" edges="1to2 2to3 3to4"/>
    <route id="route_emergency_2" edges="2to3 3to4 4to1"/>
    
    <!-- Vehicle Definitions -->
    <vehicle id="emergency_0" type="emergency" route="route_emergency_1" depart="40.00" color="1,0,1"/>
    <vehicle id="emergency_1" type="emergency" route="route_emergency_2" depart="80.00" color="1,0,1"/>
    
</routes>
