<?xml version="1.0" encoding="UTF-8"?>
<!-- Bus routes for traffic simulation -->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Vehicle Type Definition for Buses -->
    <vType id="bus" accel="1.2" decel="4.0" sigma="0.5" length="15.0" minGap="3.5" maxSpeed="30.0" color="1,1,0"/>
    
    <!-- Routes -->
    <route id="route_bus_1" edges="1to2 2to3 3to4 4to1"/>
    <route id="route_bus_2" edges="2to3 3to4"/>
    
    <!-- Vehicle Definitions -->
    <vehicle id="bus_0" type="bus" route="route_bus_1" depart="8.00" color="1,1,0"/>
    <vehicle id="bus_1" type="bus" route="route_bus_2" depart="35.00" color="1,1,0"/>
    <vehicle id="bus_2" type="bus" route="route_bus_1" depart="60.00" color="1,1,0"/>
    
</routes>
