<?xml version="1.0" encoding="UTF-8"?>
<!-- Truck vehicle routes for traffic simulation -->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Vehicle Type Definition for Trucks -->
    <vType id="truck" accel="1.3" decel="4.0" sigma="0.5" length="12.0" minGap="3.0" maxSpeed="35.0" color="0,1,0"/>
    
    <!-- Routes -->
    <route id="route_truck_1" edges="1to2 2to3"/>
    <route id="route_truck_2" edges="2to3 3to4 4to1"/>
    <route id="route_truck_3" edges="3to4 4to1"/>
    
    <!-- Vehicle Definitions -->
    <vehicle id="truck_0" type="truck" route="route_truck_1" depart="3.00" color="0,1,0"/>
    <vehicle id="truck_1" type="truck" route="route_truck_2" depart="18.00" color="0,1,0"/>
    <vehicle id="truck_2" type="truck" route="route_truck_3" depart="30.00" color="0,1,0"/>
    <vehicle id="truck_3" type="truck" route="route_truck_1" depart="45.00" color="0,1,0"/>
    
</routes>
